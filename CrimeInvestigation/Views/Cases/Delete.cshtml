@model CrimeInvestigation.Models.Case

@{
    ViewBag.Title = "Delete";
}

<br />
<br />
<br/>
<div class="eden">

    <h3 style="text-align:center;color:red; background-color:rgba(3, 11, 85,0.8); font-size:35px"><i>Дали е случајот решен?</i></h3>
    <div>


        <div>

            <hr />
            <div class="heh">

                <br />


                <h3 style="text-align:center; border:groove; background-color: rgba(3, 11, 85, 0.8);">
                    Лицето @Html.DisplayFor(model => model.Ime)  @Html.DisplayFor(model => model.Prezime) пријави случај @Html.DisplayFor(model => model.Tip),
                    коe се случилo во  @Html.DisplayFor(model => model.Vreme) часот на локацијата: @Html.DisplayFor(model => model.Lokacija).
                    Описот на случката гласи вака: @Html.DisplayFor(model => model.Opis).
                </h3>

            </div>
        </div>
        <br/>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="text-align:center">
                <input type="submit" value="Избриши" style="font-size:25px" onclick="return confirm ('Дали сте сигурни дека сакате да го избришете случајот?');" class="btn btn-success" />

            </div>
            <br />
        }
    </div>

</div>


